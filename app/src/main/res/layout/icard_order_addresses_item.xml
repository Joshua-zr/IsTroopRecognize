<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icard_order_addresses_item_iv"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/icard_gv_spacing"
                android:src="@drawable/card_select" />

            <LinearLayout
                android:id="@+id/icard_order_addresses_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="100"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/icard_order_addresses_item_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:paddingRight="@dimen/icard_left_right_little"
                        android:singleLine="true"
                        android:text="lily   13022233344"
                        android:textColor="@color/black"
                        android:textSize="@dimen/icard_text_size_middle" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/icard_order_addresses_item_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/icard_left_right_little"
                    android:text="ssssssssssssssssssssssssssssssssssssssssssssssssss"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/icard_text_size_little" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icard_order_address_item_iv2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/icard_left_right_little"
                android:layout_weight="1"
                android:src="@drawable/card_edit" />
        </LinearLayout>

        <Button
            android:id="@+id/icard_order_address_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/pic_delete"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icard_order_address_item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ff0000">

        <TextView
            android:id="@+id/icard_order_address_item_right_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/icard_text_size_middle" />
    </RelativeLayout>

</LinearLayout>
