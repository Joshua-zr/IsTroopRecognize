<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/icard_top">

        <RelativeLayout
            android:id="@+id/design_sig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingEnd="5dp"
            android:paddingLeft="@dimen/icard_text_padding"
            android:paddingRight="5dp"
            android:paddingStart="5dp">

            <ImageView
                android:layout_width="@dimen/icard_gv_spacing"
                android:layout_height="@dimen/icard_gv_spacing"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/icard_text_padding"
                android:layout_marginStart="5dp"
                android:contentDescription=""
                android:src="@drawable/icard_arrow_left" />

            <TextView
                android:id="@+id/design_tag_video_cannel"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:text="@string/cannel"
                android:textColor="@color/orange"
                android:textSize="@dimen/icard_text_size_middle" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/design_tag_video_save"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingRight="@dimen/icard_text_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:text="@string/save"
                android:textColor="@color/orange"
                android:textSize="@dimen/icard_text_size_middle" />

            <ImageView
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:src="@drawable/icard_arrow_right" />
        </RelativeLayout>

        <TextView
            android:id="@+id/design_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/icard_tag_video"
            android:textColor="@android:color/black"
            android:textSize="@dimen/icard_text_size_big" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="none"
        android:src="@drawable/icard_line" />

    <LinearLayout
        android:id="@+id/design_tag_video_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icard_text_padding"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/icard_top"
            android:background="@color/white"
            android:paddingEnd="5dp"
            android:paddingLeft="@dimen/icard_text_padding"
            android:paddingRight="5dp"
            android:paddingStart="5dp">

            <EditText
                android:id="@+id/design_tag_video_et"
                android:layout_width="@dimen/icard_edittext_big_width"
                android:layout_height="@dimen/icard_edittext_little_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/icard_left_right_little"
                android:layout_marginStart="5dp"
                android:background="@android:drawable/editbox_background_normal"
                android:inputType="textUri"
                android:singleLine="true" />

            <Button
                android:id="@+id/design_tag_video_bt"
                android:layout_width="@dimen/icard_edittext_little_width"
                android:layout_height="@dimen/icard_edittext_little_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="@dimen/icard_left_right_little"
                android:background="@android:drawable/editbox_background_normal"
                android:text="@string/design_tag_search_bt" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/design_tag_map_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <ListView
                android:id="@+id/design_tag_video_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
