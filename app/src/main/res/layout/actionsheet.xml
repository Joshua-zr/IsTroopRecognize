<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/design_head"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#60cccccc"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/design_head_photo"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="@dimen/icard_gv_spacing"
                android:layout_marginRight="@dimen/icard_gv_spacing"
                android:layout_marginTop="@dimen/icard_gv_spacing"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:onClick="photo"
                android:text="拍照"
                android:textColor="@color/orange"
                android:textSize="@dimen/icard_text_size_middle" />

            <Button
                android:id="@+id/design_head_album"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginLeft="@dimen/icard_gv_spacing"
                android:layout_marginRight="@dimen/icard_gv_spacing"
                android:layout_marginTop="@dimen/icard_gv_spacing"
                android:background="@drawable/button_white"
                android:gravity="center"
                android:onClick="album"
                android:text="从手机相册选取"
                android:textColor="@color/orange"
                android:textSize="@dimen/icard_text_size_middle" />

            <Button
                android:id="@+id/design_head_quit"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_marginBottom="@dimen/icard_gv_spacing"
                android:layout_marginLeft="@dimen/icard_gv_spacing"
                android:layout_marginRight="@dimen/icard_gv_spacing"
                android:layout_marginTop="@dimen/icard_gv_spacing"
                android:background="@drawable/button_black"
                android:gravity="center"
                android:onClick="quit"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/icard_text_size_middle" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>