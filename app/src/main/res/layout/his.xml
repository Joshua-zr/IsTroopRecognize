<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/content_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        style="@style/Match"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/icard_his_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white"
            android:visibility="visible">

            <TextView
                android:id="@+id/titleText"
                style="@style/Wrap"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="@string/his_title"
                android:textColor="@color/black"
                android:textSize="@dimen/icard_text_size_big"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/his_menu"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/menu_icon"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66000000"/>

        <RelativeLayout
            style="@style/Wrap">

            <ProgressBar
                android:id="@+id/his_progresss"
                style="@style/Wrap"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/icard_home_top_ll"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/icard_home_top_iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_top"/>

                <LinearLayout
                    android:id="@+id/icard_home_top"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:clickable="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/icard_home_map"
                        android:layout_width="@dimen/icard_pic_button_width"
                        android:layout_height="@dimen/icard_pic_button_height"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="地图"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/icard_text_size_middle"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/icard_home_top_head"
                        android:layout_width="65dip"
                        android:layout_height="65dip"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/icard_text_padding"
                        android:layout_marginTop="30dip"/>

                    <TextView
                        android:id="@+id/icard_home_top_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/icard_text_padding"
                        android:gravity="center_horizontal"
                        android:text="题目"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/icard_text_size_middle"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/icard_home_top_desc"
                        style="@style/MatchWitch"
                        android:layout_marginBottom="@dimen/icard_text_padding"
                        android:gravity="center_horizontal"
                        android:text="标签"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/icard_text_size_little"
                        android:textStyle="bold"/>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/Match">

            <TextView
                android:id="@+id/his_error"
                style="@style/Wrap"
                android:layout_centerInParent="true"
                android:text="无扫描记录"
                android:visibility="gone"/>

            <com.istroop.istrooprecognize.SwipeListView
                android:id="@+id/listView"
                style="@style/Match"
                android:layout_marginBottom="@dimen/footer"
                android:divider="#cccccc"
                android:dividerHeight="1dp"
                android:listSelector="#ffffff"/>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>