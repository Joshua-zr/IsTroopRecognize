<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/detail_edition"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/white">

<!--        <Button
            android:id="@+id/leftBtn_edition"
            android:layout_width="44dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/backbtn" />-->
        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/icard_left_right_little"
            android:src="@drawable/icard_arrow_left" />

        <TextView
            android:id="@+id/leftBtn_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/icard_left_right_big"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:text="返回"
            android:textColor="@color/orange"
            android:textSize="@dimen/icard_text_size_middle" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="信息详情"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#66000000"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/editoinDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dip"
        android:text="版权所有者"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/userhead"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editoinDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="图片默认描述文字"
        android:src="@drawable/picture_init" />

    <TextView
        android:id="@+id/nickDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userhead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="用户名"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nickText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="文本默认描述文字"
        android:textColor="#000000"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nickText"
        android:layout_marginTop="45dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/callmeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="联系我"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/contractText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/callmeDesc"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:text="联系人："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/qqText"
            android:layout_below="@+id/qqText"
            android:layout_marginTop="8dp"
            android:text="手机号："
            android:textSize="14sp" />

        <TextView
            android:id="@+id/qqText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contractText"
            android:layout_below="@+id/contractText"
            android:layout_marginTop="8dp"
            android:text="Q      Q:"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>