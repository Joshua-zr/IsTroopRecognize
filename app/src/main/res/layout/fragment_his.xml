<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context="com.istroop.istrooprecognize.ui.fragment.HisFragment">

	<TextView
		android:id="@+id/titleText"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_gravity="center_horizontal"
		android:gravity="center"
		android:text="@string/his_title"
		android:textColor="@color/black"
		android:textSize="@dimen/icard_text_size_big"
		android:textStyle="bold"/>

	<ImageView
		android:id="@+id/his_menu"
		android:layout_width="50dip"
		android:layout_height="50dip"
		android:layout_gravity="end"
		android:src="@drawable/menu_icon"/>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_marginTop="49.5dp"
		android:background="#66000000"/>

	<TextView
		android:id="@+id/his_error"
		style="@style/Wrap"
		android:layout_gravity="center"
		android:text="@string/no_his"
		android:visibility="visible"/>

	<com.istroop.istrooprecognize.SwipeListView
		android:id="@+id/listView"
		style="@style/Match"
		android:layout_marginBottom="@dimen/footer"
		android:layout_marginTop="50dp"
		android:divider="#cccccc"
		android:dividerHeight="1dp"
		android:listSelector="#ffffff"/>

</FrameLayout>
